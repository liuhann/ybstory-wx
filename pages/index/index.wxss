/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.label-thumb-title {
  border-top: 1px solid #eee;
  margin-top: 10px;
  padding: 3vw;
  color: #FA860B;
}

.label-thumb-list {
  display: flex;
  flex-wrap: wrap;

}

.label-thumb-list .label-thumb-item {
  width: 33vw;
  padding: 3vw;
  box-sizing: border-box;
}

.label-thumb-list .label-thumb-item .img-wrapper {
  border:1px solid #eee;
}
.label-thumb-list .label-thumb-item .img-wrapper image {
  width:27vw;
  height:27vw;
}
.label-thumb-list .label-thumb-item text {
  text-align: center;
  font-size: 3vw;
}
.nav-list {
  padding: 0 3vw;
}
.nav-list-item {
  text-align: center;
  display: inline-block;
  width: 23vw;
}

.nav-list-item image {
  width: 15vw;
  height: 15vw;
  display: block;
  margin: 4vw;
  margin-bottom: 1vw;
}

.nav-list-item text {
  font-size: 4vw;
}