.dimension {
  display: flex;
  font-size: 4vw;
  background: #fff;
  margin: 1vh 0vh;
  justify-content: center;
  text-align: center;
  align-items: center;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.dimension .dim {
  flex: 1;
}


.dimension .dim image {
  display: block;
  width: 10vw;
  height: 10vw;
  margin: 0 auto;
}
.dimension .dim text {
  margin-top:2vw;
  display:block;
}

.dimension .labels {
  flex: 3;
  display: flex;
  flex-wrap: wrap;
  border-left: 1px solid #eee;
  min-height:14vh;
}

.dimension .labels .label {
  padding: 2.5vh 0;
  width: 33.3%;
  font-size: 4vw;
  box-sizing: border-box;
}

